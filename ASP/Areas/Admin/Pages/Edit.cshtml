@page "{id:int}"
@model ASP.Areas.Admin.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Boots</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post"  enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Boots.BootsId" />
            
            

            <div class="form-group">
                <label asp-for="Boots.BootsName" class="control-label"></label>
                <input asp-for="Boots.BootsName" class="form-control" />
                <span asp-validation-for="Boots.BootsName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Boots.Description" class="control-label"></label>
                <input asp-for="Boots.Description" class="form-control" />
                <span asp-validation-for="Boots.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Boots.Size" class="control-label"></label>
                <input asp-for="Boots.Size" class="form-control" />
                <span asp-validation-for="Boots.Size" class="text-danger"></span>
            </div>
            <div class="form-group">

                @if (!string.IsNullOrEmpty(Model.Boots.Image))
                {<img src=~/Images/@Model.Boots.Image alt="NoSuchFile" width="150" />}
                else { 
                    <h4>Файл изображения не задан</h4> 
                }
                
                    <input type="file" class="form-control-file" name="image" id="customFile">
                
                

                @*<label asp-for="Boots.Image" class="control-label"></label>
                <input asp-for="Boots.Image" class="form-control" />
                <span asp-validation-for="Boots.Image" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="Boots.BootsGroupId" class="control-label"></label>
                <select asp-for="Boots.BootsGroupId" class="form-control" asp-items="ViewBag.BootsGroupId"></select>
                <span asp-validation-for="Boots.BootsGroupId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>
