

@{ ViewBag.Title = "Главная страница";
}



    <body>
        <h2>
            @ViewData["Text"]
        </h2>
        <ol type="A">
            @for (int i = 1; i < 5; i++)
            {
                <li>element @i from list</li>
            }
        </ol>

        <select asp-items="@ViewData["Lst"] as SelectList"></select>
        <hr />

        <div>
            <div class="form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" name="exampleRadios" id="exampleRadios1" value="option1" checked>
                    Checkbox 1
                </label>
            </div>
            <div class="form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" name="exampleRadios" id="exampleRadios2" value="option2">
                    Checkbox 2
                </label>
            </div>
        </div><br />
        <div>
            <label class="form-check-inline">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1"> RadiusButton-1
            </label>
            <label class="form-check-inline">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2"> RadiusButton-2
            </label>
            <label class="form-check-inline">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="option3"> RadiusButton-3
            </label>
        </div><br />
        <div>
            <label for="exampleInputEmail1">Login (email)</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Login">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Enter your password"><br />
            <button type="button" class="btn btn-info">Submit</button>
        </div>
   

    </body> 